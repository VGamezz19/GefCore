<!-- _____________________________START____MODAL___________________________________ -->

  <!--START Modal LOGIN -->
  <div class="modal loginModal fade" >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title">Entra</h2>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="post" action='/singin' name="login_form">

            <p><input type="text" class="inputLogin"  id="username" focus-me="true" name="username" placeholder="Usuario" ></p>
            <p><input type="password" class="inputLogin" name="password" placeholder="Contraseña"></p>
            <input type="submit" class="btn btn-primary" value='Entra'>
          </form>
        </div>
        <div class="modal-footer">
            Nuevo en GefCore?
            <a href='' class=" registerLogin btn btn-primary">Registrate</a>
          </div>
      </div>
    </div>
  </div>
  <!--END Modal LOGIN -->

  <!-- Start Modal REGISTER -->
  <div class="modal registerModal fade" >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title">Registrarse</h2>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="post" action='/singup' name="login_form">

            <p><input type="text" class="inputLogin"  id="firstName" focus-me="true" name="firstName" placeholder="Nombre" ></p>
            <p><input type="text" class="inputLogin" name="lastName" placeholder="Apellido"></p>
            <p><input type="text" class="inputLogin" name="email" placeholder="Correo" ></p>
            <p><input type="text" class="inputLogin" name="username" placeholder="Nombre de usuario"></p>
            <p><input type="password" class="inputLogin" name="password" placeholder="Contraseña" ></p>
            <input type="submit" class=" btn btn-primary" value='Crear cuenta'>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- END Modal REGISTER-->

<!-- START Modal CheckLogOUT-->

<div class="modal checkModal fade" >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title">Cerrar sesion</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class ="row">
          <div class ="col-md-6 col-lg-6">
            <form   style ="whitd: 40%;"action='/singout'>
              <input type="submit" class="yesClose-loged btn btn-danger" value='Si'>
            </form>
          </div>
          <div class ="col-md-6 col-lg-6">
             <input type="submit" class="close-loged btn btn-primary" value='No' data-dismiss="modal" aria-label="Close">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- END Modal CheckLogOUT-->
<!-- _______________________________END__MODAL___________________________________ -->

