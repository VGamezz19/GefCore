<!-- Usuario Conectado-->
<%  if( userFullName){ %> <!-- True false User -->
    <h1>Hola <%=userFullName%></h1>
    <form action="/singout">
      <input type="submit" class="btn btn-primary" value='Cerrar sesion'></input>
    </form>

<%
  }%>

  <!--Usuario desconectado -->
  <%  if(!userFullName){ %> <!-- True false User -->
  <!--START Modal LOGIN -->
  <div class="modal fade" >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title">Login</h2>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="post" action='/singin' name="login_form">

            <p><input type="text" class="inputLogin"  id="username" focus-me="true" name="username" placeholder="Username" ></p>
            <p><input type="password" class="inputLogin" name="password" placeholder="Password" ng-init="loginInit()" ></p>
            <input type="submit" class="btn btn-primary" value='Sing in'>
          </form>
        </div>
        <div class="modal-footer">
            New To GefCore?
            <a href='/singup' class="btn btn-primary">Register</a>
          </div>
      </div>
    </div>
  </div>

  <!--END Modal LOGIN -->

  <script>
    $('.modal').modal('show');
  </script>

  <%}%>

<!--Title-->
  <br>
  <title><%= title %></title>

</head>
<body>


